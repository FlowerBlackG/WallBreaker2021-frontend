}

.background{
  /* position */
  position: absolute;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: 0%;
}
/* 顶部导航栏相关（重载） */
.weui-navigation-bar__centers{
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  text-align: center;
  letter-spacing: 4rpx;
  color: #FFFFFF;
  }
  .weui-search-bar {
    background: rgba(242, 252, 255, 0.35);
    mix-blend-mode: overlay;
    border-radius: 44px;
    left:2%;
    width:96%;
  }
  .weui-search-bar__form{
    height: 48rpx;
  }
  .weui-search-bar__box{
    height: 48rpx;
  }
  .weui-search-bar__box .weui-search-bar__input{
    padding:0 0 0 0 ;
    height: 48rpx;
  }
