/* ==================
          按钮
 ==================== */
/* 默认大小 */
 .poby-btn {
	position: relative;
	border: 0rpx;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0 20rpx;
	font-size: 20rpx;
  height: 48rpx;
  width: 160rpx !important;
	line-height: 1;
	text-align: center;
	text-decoration: none;
	overflow: visible;
	margin-left: initial;
	transform: translate(0rpx, 0rpx);
	margin-right: initial;
}
.poby-btn::after {
  display: none;
}

/* 按钮颜色 */
.poby-btn{
	background-color: #f0f0f0;
}
.poby-btn.bg-purple{
	background-color: #BA75FF;
	color: #F7F7F7;
}
.poby-btn.bg-blue{
	background-color: #26C9FF;
	color: #F7F7F7;
}
.poby-btn.bg-darkblue{
	background-color: #17B2E5;
	color: #F7F7F7;
}
.poby-btn.bg-white{
	background-color: #fff;
	color: #545454;
}
.poby-btn.bg-gray{
	background-color: #B9B9B9;
	color: #F7F7F7;
}

.poby-btn.line {
	background-color: transparent;
}
.poby-btn.line.bg-purple{
	color: #BA75FF;
}
.poby-btn.line.bg-blue{
	color: #26C9FF;
}
.poby-btn.line.bg-darkblue{
	color: #17B2E5;
}
.poby-btn.line.bg-white{
	color: #fff;
}
.poby-btn.line.bg-gray{
	color: #B9B9B9;
}
.poby-btn[class*="line"]::after {
	content: " ";
	display: block;
	width: 200%;
	height: 200%;
	position: absolute;
	top: 0;
	left: 0;
	border: 2rpx solid currentColor;
	transform: scale(0.5);
	transform-origin: 0 0;
	box-sizing: border-box;
	border-radius: 12rpx;
	z-index: 1;
	pointer-events: none;
}

.poby-btn.round{
	border-radius: 1000rpx;
}
.poby-btn.round[class*="line"]::after {
	border-radius: 1000rpx;
}
.poby-btn[class*="lines"]::after {
	border: 6rpx solid currentColor;
} 

