@import "/static/common.wxss";

/* pages/jishi/main.wxss */
.area2{
  position:fixed;
  top:10%;
  width: 100%;
  left:0;
  height: 100%;
}
.shade{
  position: absolute;
  top:0%;
  background-color: #F2FCFF;
  opacity: 100%;
  height:100%;
  left:0%;
  width:100%;
  border-radius: 25px 25px 0 0;
  z-index: 0;
}

.content-area{

  top:2vh;
  height:100%;
  width:94%;
  left:3%;
  position:absolute;
}

.second-title{
  color:#4A5559;
  font-size:40rpx;
  font-weight: bold;
}
.common-text{
  font-size: 30rpx;
  white-space:pre-line;
  font-weight:medium;
  color:#4A5559;
}
.common-image-box{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.common-image{
  margin-top: 2vh;
  margin-bottom: 2vh;
  width:75%;
  align-items: center;
}

