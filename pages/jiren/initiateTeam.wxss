/* pages/jiren/initiateTeam.wxss */
@import "/static/common.wxss";
page {
  height: 100%;
}
.area2{
  position:fixed;
  top:10%;
  width: 100%;
  left:0;
  height: 100%;
}
.shade{
  position: absolute;
  top:0%;
  background-color: #F2FCFF;
  opacity: 35%;
  height:100%;
  left:0%;
  width:100%;
  border-radius: 25px 25px 0 0;
}

.main-area {
  height: 100%;
}
.main-area-content {
  /*居中对齐后，余750rpx-75rpx=675rpx*/
  padding: 35rpx;
}
.section2 {
  display: flex;
}

.dropdown-box-wrap,
.picker-wrap {
  /*position: static;*/
  width: 200rpx;
  margin-right: 130rpx; 
  margin-bottom: 10rpx;
}

/*全局输入框样式设置*/
.picker-box,
.teamInfo-content-wrap,
.question-content
 {
  background: #F2FCFF;
  border-radius: 6px;
}
/*全局字体设置*/
.selector-label,
.teamInfo-label
{
  font-family: PingFang SC;
  font-size: 14px;
  line-height: 16px;
  color: #4A5559;
  
  margin: 6rpx;
}
.question-content-text {
  font-family: PingFang SC;
  font-size: 14px;
  line-height: 16px;
  color: #4A5559;
  

}
.appendQuestion-label {
  font-family: PingFang SC;
  font-size: 14px;
  line-height: 16px;
  color: #4A5559;
}


.picker-box {
  /*position: relative;*/
  height: 50rpx;
  width: 100%;
  padding-left: 10rpx;
  background: #F2FCFF;
  border-radius: 6px;
  /*字体设置*/
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #4A5559;

  display: flex;
  align-items: center;

}

.teamInfo-title {
  width: 100%;
  min-height: 50rpx;
  margin-bottom: 16rpx;
}
.teamInfo-title-input,
.isNeedQuestion-text
 {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #4A5559;

  display: flex;
  align-items: center;
}

.teamInfo-content-wrap {
  padding: 12rpx;
  margin-bottom: 26rpx;
}
.teamInfo-scroll-view {
  height: 360rpx;
}
.teamInfo-content-textarea {
  height: 160rpx;
  width: 95%;

  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #4A5559;
}
.teamInfo-content-textarea-placeholder,
.question-content-text-placeholder {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #989A9A;
}

.isNeedQuestion {
  margin-bottom: 20rpx;
}

.question-wrap {
  /*display: flex;*/
  margin-bottom: 18rpx;
}
.question-content
{
  display: inline-block;
  width: 600rpx;
  padding: 3rpx 0 3rpx 10rpx ;
  margin-right: 10rpx;
}

.delete {
  display: inline-block;
}
.appendQuestion {
  display: flex;
  align-items: center;
  width: 200rpx;
}
.empty-block{
  position: relative;
  width: 100%;
  height: 200rpx;
}
.submitButton {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 14px;
  line-height: 20px;

  color: #FFFFFF;
}