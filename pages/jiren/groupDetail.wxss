}





.listArea{
  top:2vh;
  position: relative;
  height:100%;
  margin-top: 10px;
  z-index: 2;
}
.buttonArea{
  position: relative;
  top:1%;
  height:4%;
  /* background-color: #ff0000; */
  left:0;
  width:100%;
  z-index:2;
}
.myPublishButton,.myJoinButton{
  position: relative;
  top:0%;
  height:100%;
  width:35%;
  border-radius: 18px;
  color:#FFFFFF;
  align-items: center;
  font-size:4vw;
  display: flex;
  justify-content: center;
  letter-spacing: 1px;
  float:left;
}
.myPublishButton{
  background-color: #17B2E5;
  left:10%;
}
.myJoinButton{
  background-color: #8C1AFF;
  left:20%;
}
.filterArea{
  position: relative;
  top:2%;
  height:3.5%;
  /* background-color: #00ff00; */
  left:0;
  width:100%;
  z-index:2;
}
.timeFilter,.conditionFilter{

  position: relative;
  top:10%;

  height:100%;
  border-radius: 5px;
  color:#FFFFFF;
  align-items: center;
  font-size:4vw;
  display: flex;
  justify-content: center;
  letter-spacing: 1px;
  float:left;
  /* z-index:3; */
  background-color: #F2FCFF;
}
.timeFilter{
  left:3%;
  width:25%;
}
.conditionFilter{
  left:5%;
  width:16%;
}
.timeText{
  position: relative;
  float:left;
  left:-4%;
  color: #17B2E5;
  font-size: 3vw;
  letter-spacing: 0.5px;
}
.conditionText,.conditionTextBlue{
  position:relative;
  float:left;
  left:-8%;
  font-size: 3vw;
  letter-spacing: 1px;
}
.conditionText{
  color:#768185;
}
.conditionTextBlue{
  color:#17B2E5;
}
.timeIcon,.conditionIcon{
  position:relative;
  float: left;
  height:3.2vw;
  width: 3.2vw;
}
.filterExtended{
  position: absolute;
  top:10.5%;
  height:100%;
  left:0%;
  width:100%;
  z-index: 4;
}

.shade2{
  position: absolute;
  top:0%;
  height:100%;
  width:100%;
  background-color: #000000;
  opacity: 20%;
  z-index:3;
}
.whiteBG{
  position: relative;
  margin-left:3vw;
  margin-right: 3vw;
  top:18%;
  display: flex;flex-direction: row;justify-content: space-between;
  height:100%;
}
.conditionArea{
  position:relative;
  
  top:0%;
  height:6%;
  background-color: #F2FCFF;
  border-radius: 0 0 20px 20px;
  z-index: 4;
  
}

