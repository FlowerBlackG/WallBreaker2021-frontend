}
.buttonArea{
  position: relative;
  top:1%;
  height:4%;
  /* background-color: #ff0000; */
  left:0;
  width:100%;
  z-index:2;
}
.myPublishButton,.myJoinButton{
  position: relative;
  top:0%;
  height:100%;
  width:35%;
  border-radius: 18px;
  color:#FFFFFF;
  align-items: center;
  font-size:4vw;
  display: flex;
  justify-content: center;
  letter-spacing: 1px;
  float:left;
}
.myPublishButton{
  background-color: #17B2E5;
  left:10%;
}
.myJoinButton{
  background-color: #8C1AFF;
  left:20%;
}
.filterArea{
  position: relative;
  top:2%;
  height:3.5%;
  /* background-color: #00ff00; */
