/* pages/tongde/main.wxss */
page {
  /* 填满页面 */
  display: flex;
  height: 100%;
  flex-direction: column;
}

/*上部 tab*/
.tab {
  display: flex;
  width: 100%;
}
.tab-item {
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
}
.tab-item.active {
  /* 颜色暂定 */
  color: blue;
  border-bottom-color: blue;
}

/*中间 content*/
.content {
  flex-grow: 1;
  height: 100rpx;
}
.content > swiper {
  /*子代选择器 content类的且swiper子元素*/
  height: 100%;
  background-color: #eee;
}