/* pages/tongde/creatPost.wxss */
@import "/static/common.wxss";

.inner-container{
  width: 94vw;
  margin: 10rpx 3vw;
}
.title{
  margin: 10rpx 0;
  height: 60rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 60rpx;
  letter-spacing: 2rpx;
}
radio-group>radio{
  margin-right: 30rpx;
  letter-spacing: 3rpx;
}
.input-a-line-box{
  width: 89vw;
  /* height: 55rpx; */
  padding: 10rpx 1vw;
  border: 2rpx solid gray;
  margin: auto;
}
.input-half-line-box{
  /* width: auto; */
  /* height: 55rpx; */
  position: absolute;
  left: 35%;
  right: 0;
  padding: 10rpx 1vw;
  /* margin-left: 3vw; */
  border: 2rpx solid gray;
  /* margin: auto; */
}
.text-box{
  width: 89vw;
  height: 300rpx;
  padding: 10rpx 1vw;
  border: 2rpx solid gray;
  margin: auto;
}
.text-area{
  width: auto;
  height: auto;
  letter-spacing: 1rpx;
}
.a-line{
  position: relative;
  display: flex;
  flex-direction: row;
}
.tag-a-line{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 15rpx auto;
}
.tag-a-line>view{
  margin: 0 20rpx 20rpx;
}

.button{
  width: 70vw;
  height: 6vh;
  margin: 30rpx auto 0;
  line-height: 6vh;
  text-align: center;
  letter-spacing: 2rpx;
  border: 2rpx solid gray;
  border-radius: 20rpx;
}


.tag-position{
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  height: 100%;

  z-index: 4;
}
.tag-box{
  /* height: auto; */
  width: 80vw;
  margin: auto;
  padding: 30rpx 20rpx 20rpx;
  background-color: white;
  border: 2rpx solid black;
  border-radius: 20rpx;
}
/* .tag-message{

  letter-spacing: 1rpx;
} */
.tag-area{
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.tag-choosen,.tag-normal{
  /* display: inline; */
  width: 22vw;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  /* margin: 10rpx auto; */
  border: 2rpx solid black;
  border-radius: 25rpx;
}
.tag-choosen{
  border: 3rpx solid rgb(235, 0, 235);
}
.tag-button{
  width: 30vw;
  height: 60rpx;
  margin: 0 auto 20rpx ;
  line-height: 60rpx;
  text-align: center;
  border: 2rpx solid black;
  border-radius: 10rpx;
}
