/* pages/tongde/creatPost.wxss */
@import "/static/common.wxss";
Page {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 1.5;

  color: #545454;
}
/* input为原生组件，要用height，min-height覆盖原有属性 */
input {
  height: 30rpx;
  min-height: 0rpx;
  line-height: 30rpx;
}
.input-placeholder {
  /* font-size: 24rpx; */
  color: #989a9a;
}
/* 设置整体样式 */
.inner-container{
  width: 686rpx;
  margin: 10rpx 32rpx;
  height: 100%;
}
.item-wrap {
  width: auto; /*子元素（包括content+padding+border+margin）撑满整个父元素的content区域。*/
  padding: 24rpx 0 16rpx 0;
  border-bottom: 1rpx solid #DEDEDE;
}
/* 设置标题及图标 */
.title{
  /* height: 60rpx; */
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1.5;
}
.icon-with-title {
  display: flex;
  flex-direction: row;
  align-items: flex-start;

  margin-bottom: 16rpx;
}
.icon {
  height: 24rpx;
  width: 24rpx;
}
/* -----------总体公用样式设置结束------------ */

.input-lost-name-box,
.text-box {
  display: flex;
}
.input-lost-name {
  height: 40rpx;
  font-size: 32rpx;
  line-height: 1.25;
  color: #333333;
}
.text-box {
  height: 200rpx;
}
.text-area {
  height: 200rpx;
}
.type-container {
  width: 686rpx;
  height: 80rpx;
  padding: 26rpx 0 24rpx 0;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
radio-group > radio {
  font-size: 20rpx;
  line-height: 30rpx;
  height: 30rpx;
  min-height: 30rpx;
}
#lost {
  margin-right: 40rpx;
}

.input-location-box {
  padding: 0px 0px 0px 32rpx;
}
.input-location {
  font-size: 20rpx;
}

.input-contact-box{
  height: 48rpx;
  /* padding参考设计图24 = 5+15+4 px,PC端预览时placeholder会偏移，手机端正常 */
  padding: 10rpx 1vw 8rpx 1vw;
  border-bottom: 1rpx solid #DEDEDE;
}

.a-line{
  position: relative;
  display: flex;
  flex-direction: row;
}
.tag-a-line{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 15rpx auto;
}
.tag-a-line>view{
  margin: 0 20rpx 20rpx;
}

.button{
  box-sizing: border-box;
  width: 686rpx;
  height: 80rpx;
  margin: 30rpx auto 0;
  padding: 20rpx 0 18rpx 0;
  background: #3E92CC;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #F7F7F7;
  text-align: center;
}


.tag-position{
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  height: 100%;

  z-index: 4;
}
.tag-box{
  /* height: auto; */
  width: 80vw;
  margin: auto;
  padding: 30rpx 20rpx 20rpx;
  background-color: white;
  border: 2rpx solid black;
  border-radius: 20rpx;
}
/* .tag-message{

  letter-spacing: 1rpx;
} */
.tag-area{
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.tag-choosen,.tag-normal{
  /* display: inline; */
  width: 22vw;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  /* margin: 10rpx auto; */
  border: 2rpx solid black;
  border-radius: 25rpx;
}
.tag-choosen{
  border: 3rpx solid rgb(235, 0, 235);
}
.tag-button{
  width: 30vw;
  height: 60rpx;
  margin: 0 auto 20rpx ;
  line-height: 60rpx;
  text-align: center;
  border: 2rpx solid black;
  border-radius: 10rpx;
}
