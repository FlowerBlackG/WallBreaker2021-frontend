/* pages/tongde/detail.wxss */
@import "/static/common.wxss";
.jiren-container{
  background: #F9F2FF;
  }
  .scroll-content{
    position: relative;
    height: 100%;
    width: 100%;
  }
  .header{
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 40rpx;
    margin-top: 50rpx;
  }
  .objectName{
      /* title1/bold/14 */
      font-family: Noto Sans SC;
      font-style: normal;
      font-weight: bold; 
      /* font-size: 4vw;  */
      font-size: 36rpx;
      line-height:40rpx;
      /* gray4_P */
      color: #524A59;
    }
    .condition{
      width: 140rpx;
      height: 44rpx;
      text-align: center;
      /* Purple3 */
      background: #1D99C3;
      border-radius: 10rpx;
      font-family: Noto Sans SC;
      font-style: normal;
      font-weight: 500;
      font-size: 30rpx;
      /* white */
      color: #FFFFFF;
    }
    .userAvatar{
      position: absolute;
      left: 50rpx;
      top: 110rpx;
      width: 60rpx;
      height: 60rpx;
    }
    .userName{
      display: inline-block;
      height: 40rpx;
      margin: 30rpx  30rpx 30rpx 140rpx;
      /* tag/medium/11 */
      font-family: PingFang SC;
      font-size: 30rpx;
      line-height: 40rpx;
      /* Purple3 */
      color: #7E7685;
    }
    .time{
      /* 2021年6月9日 21:40 */
      display: inline-block;
      height: 40rpx;
      /* tag/medium/10 */
      font-family: PingFang SC;
      font-size: 22rpx;
      line-height: 40rpx;
      /* identical to box height */
      /* gray3_P */
      color: #7E7685;
    
    }
    .content{
      width: 86%;
      margin: 0 7%;
    }
    .tag-area{
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;      
      margin-bottom: 20rpx;
    }
    .tag{
      width: 120rpx;
      height: 40rpx;
      margin-right: 10rpx;
      text-align: center;
      /* Purple3 */
      background: #c0cfd4;
      border-radius: 10rpx;
      font-family: Noto Sans SC;
      font-style: normal;
      font-weight: 500;
      font-size: 26rpx;
      /* white */
      color: #FFFFFF;
    }
    .description,.location{
      /* position: relative; */
      font-family: PingFang SC;
      font-size: 30rpx;
      text-align: justify;
      /* gray4_P */
      color: #524A59;
      }
      .title{
        /* title1/bold/14 */
        font-family: Noto Sans SC;
        font-style: normal;
        font-weight: bold; 
        /* font-size: 4vw;  */
        font-size: 30rpx;
        line-height:40rpx;
        /* gray4_P */
        color: #524A59;
      }

.contactBtn{
  height: 40rpx;
  width: 180rpx;
  background: #17B2E6;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 26rpx;
  border-radius: 15rpx;
  text-align: center;
  color: #FFFFFF;
}
.pictures{
  display: flex;
  flex-wrap: wrap;
  margin:10rpx 0;
}
.pictureBlock{
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  /* Rectangle 15 */
  /* Gray1 */
  background: #E6E6E6;
  border-radius: 16rpx;
  }
  .pictureSingle{
    width: 512rpx;
    height: 288rpx;
    margin: 0 auto;
    background: #E6E6E6;
    border-radius: 16rpx;
  }
  .bottom-block{
    height:3vh;
  }