/* pages/introduction/introduction.wxss */
.main{
  position: absolute;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: 0%;
  background-image: linear-gradient(199.75deg, rgba(140, 26, 255, 0.18) 40.18%, rgba(140, 26, 255, 0) 90.9%), linear-gradient(195.29deg, #DCBCFB 2.51%, #A2E4FA 27.51%);
  background-blend-mode: color-burn, normal;
  overflow: hidden; 
}
.weui-navigation-bar__centers{
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color:#fff;
}
