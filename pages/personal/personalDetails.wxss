/* pages/personalDetails/main.wxss */  
.main{
  position: absolute;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: 0%;
  background-image: linear-gradient(199.75deg, rgba(140, 26, 255, 0.18) 40.18%, rgba(140, 26, 255, 0) 90.9%), linear-gradient(195.29deg, #DCBCFB 2.51%, #A2E4FA 27.51%);
  background-blend-mode: color-burn, normal;
  overflow: hidden; 
}
.weui-navigation-bar__centers{
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color:#fff;
}
/* 以下是intro-container组件的样式 */
.detail-container{
  height: 100%;
  background: rgba(242, 252, 255, 0.35);
  mix-blend-mode: normal;
  border-radius: 50rpx 50rpx 0 0;
}
.personal-image{
  display: flex;
  height: 160rpx;
  width: 100%;
  padding-bottom: 16rpx;
  justify-content: center;
}
.personal-image image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 75rpx;
}
.detail-items{
  display: flex;
  height: 44rpx;
  width: 100%;
  margin-bottom: 24rpx;
  align-content: center;
}
.item-title{
  height: 44rpx;
  width: 120rpx;
  margin-left: 50rpx;

  font-family: PingFang SC;
  font-size: 30rpx;
  line-height: 44rpx;
  text-align: justify;
  color: #4A5559;
}
.item-title::after{
  width: 100%;
  display: inline-block;
  content: "";
}
.item-body{
  width: 400rpx;
  height: 44rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  margin-right: 30rpx;

  font-family: PingFang SC;
  font-size: 30rpx;
  line-height: 44rpx;
  text-align: justify;
  color: #4A5559;
}
.item-body input{
  width: 360rpx;
  height: 40rpx;
  padding: 0 20rpx;
}
.wx-switch-input{
  width: 78rpx !important;
  height: 40rpx !important;
}
.wx-switch-input::before{
  width: 78rpx !important;
  height: 40rpx !important;
}
.wx-switch-input::after{
  width: 44rpx !important;
  height: 40rpx !important;
}

.warn{
  height: 40rpx;
  width: 100%;
  margin-bottom: 15rpx;
  text-align: center;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal; 
  font-size: 20rpx;
  line-height: 40rpx;
  color: #989A9A;
}

.intro-title{
  height: 44rpx;
  width: 180rpx;
  margin-left: 50rpx;

  font-family: PingFang SC;
  font-size: 30rpx;
  line-height: 44rpx;
  text-align: justify;
  color: #4A5559;
}
.intro-title::after{
  width: 100%;
  display: inline-block;
  content: "";
}
.intro-body{
  width: 450rpx;
  height: 44rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  margin-right: 30rpx;

  font-family: PingFang SC;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: justify;
  color: #4A5559;
}
.intro-body input{
  width: 410rpx;
  height: 44rpx;
  padding: 0 20rpx;
}

.label-title{
  display: flex;
  height: 70rpx;
  margin-left: 50rpx;

  font-family: PingFang SC;
  font-size: 30rpx;
  line-height: 70rpx;
  color: #4A5559;
}
.label-warn{
  align-self: center;
  height: 40rpx;
  text-align: center;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal; 
  font-size: 20rpx;
  line-height: 40rpx;
  color: #989A9A;
}
.label-body{
  display: flex;
  flex-wrap: wrap;
  width: 650rpx;
  margin: 0 50rpx;
}
.label-item{
  display: flex;
  width: 130rpx;
  height: 40rpx;
  margin-right: 32rpx;
  margin-bottom: 16rpx;
  background: #FFFFFF;
  border-radius: 20rpx;

  font-family: PingFang SC;
  font-size: 22rpx;
  line-height: 28rpx; 
  justify-content: center;
  align-items: center;
  color: #4A5559;
}
.label-active{
  background: #26C9FF;
  color: #FFFFFF;
}

.detail-btn{
  height: 70rpx;
  width: 340rpx;
  margin-top: 30rpx;

  background: #17B2E6;
  border-radius: 40rpx;  

  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 26rpx;
  line-height: 20px;
  align-items: center;
  text-align: center;
  color: #FFFFFF;
}