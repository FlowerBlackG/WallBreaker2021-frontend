/* pages/personal/main.wxss */
.main{
  position: absolute;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: 0%;
  background-image: linear-gradient(199.75deg, rgba(140, 26, 255, 0.18) 40.18%, rgba(140, 26, 255, 0) 90.9%), linear-gradient(195.29deg, #DCBCFB 2.51%, #A2E4FA 27.51%);
  background-blend-mode: color-burn, normal;
  overflow: hidden;
}
.weui-navigation-bar__centers{
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color:#fff;
}
/* 以下是per-container组件的样式 */
.per-container{
  height: 100%;
  background: rgba(242, 252, 255, 0.35);
  border-radius: 50rpx 50rpx 0 0;
}

/* 以下是用户简介per-brief样式 */
.per-brief{
  position: relative;
  height: 250rpx;
  width: 90%;
  margin: 0 5%;
}
.photo{
  position: absolute;
  bottom: 20rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
}
.briefs{
  position: absolute;
  left: 240rpx;
  bottom: 140rpx;
  height: 80rpx;
  font-family: PingFang SC;
  color: #fff;
}
.nickname{
  height: 48rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}
.school{
  height: 24rpx;
  font-size: 20rpx;
  line-height: 24rpx;
}
.labels-container{
  display: flex;
  flex-wrap: wrap;
  position: absolute;
  left: 230rpx;
  top: 110rpx;
  width: 65%;
  font-family: PingFang SC;
}
.label{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  width: 120rpx;
  margin: 10rpx;
  background: rgba(23, 178, 230, 0.8);
  border-radius: 20rpx;
  font-family: PingFang SC;
  font-size: 22rpx;
  line-height: 26rpx;
  text-align: center;
  color: #fff;
  
}


/* 以下是用户各个item的样式 */
.per-items{
  height: 37px;
  width: 92%;
  margin: 0 4%  13px 4%;
  background: #F2FCFF;
  border-radius: 5px;
}
.icon{
  float: left;
  width: 24px;
  height: 24px;
  margin: 7px 3.5px 6px 10px;
}
.item-title{
  height: 20px;
  line-height: 20px;
  padding: 9px 0 8px 0;
  font-family: PingFang SC;
  font-size: 11px;
  color: #1D99C3;
}