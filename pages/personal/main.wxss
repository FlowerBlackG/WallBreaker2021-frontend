/* pages/personal/main.wxss */
.main{
  position: absolute;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: 0%;
  background-image: linear-gradient(199.75deg, rgba(140, 26, 255, 0.18) 40.18%, rgba(140, 26, 255, 0) 90.9%), linear-gradient(195.29deg, #DCBCFB 2.51%, #A2E4FA 27.51%);
  background-blend-mode: color-burn, normal;
  overflow: hidden;
}
.weui-navigation-bar__centers{
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 18px;
  line-height: 25px;
  display: flex;
  align-items: center;
  text-align: center;
  color:#fff;
}
/* 以下是per-container组件的样式 */
.per-container{
  height: 100%;
  background: rgba(242, 252, 255, 0.35);
  border-radius: 25px 25px 0px 0px;
}

/* 以下是用户简介per-brief样式 */
.per-brief{
  position: relative;
  height: 125px;
  width: 90%;
  margin: 0 5%;
}
.photo{
  position: absolute;
  bottom: 10px;
  height: 100px;
  width: 100px;
  border-radius: 50px;
}
.briefs{
  position: absolute;
  left: 120px;
  bottom: 70px;
  height: 40px;
  font-family: PingFang SC;
  color: #fff;
}
.nickname{
  height: 24px;
  font-size: 14px;
  line-height: 24px;
}
.school{
  height: 12px;
  font-size: 10px;
  line-height: 12px;
}
.labels-container{
  display: flex;
  flex-wrap: wrap;
  position: absolute;
  left: 115px;
  top: 55px;
  width: 65%;
  font-family: PingFang SC;
}
.label{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 20px;
  width: 60px;
  margin: 5px;
  background: rgba(23, 178, 230, 0.8);
  border-radius: 10px;
  font-family: PingFang SC;
  font-size: 11px;
  line-height: 13px;
  text-align: center;
  color: #fff;
  
}


/* 以下是用户各个item的样式 */
.per-items{
  height: 37px;
  width: 92%;
  margin: 0 4%  13px 4%;
  background: #F2FCFF;
  border-radius: 5px;
}
.icon{
  float: left;
  width: 24px;
  height: 24px;
  margin: 7px 3.5px 6px 10px;
}
.item-title{
  height: 20px;
  line-height: 20px;
  padding: 9px 0 8px 0;
  font-family: PingFang SC;
  font-size: 11px;
  color: #1D99C3;
}