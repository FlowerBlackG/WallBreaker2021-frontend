/* pages/personal/main.wxss */
/* 引入通用样式 */
@import "/static/common.wxss";

.background{
  background-image: linear-gradient(199.75deg, rgba(140, 26, 255, 0.18) 40.18%, rgba(140, 26, 255, 0) 90.9%), linear-gradient(195.29deg, #DCBCFB 2.51%, #A2E4FA 27.51%);
}

.my-background{
  background: linear-gradient(180deg,rgba(62,146,204,1) -720rpx, rgba(23, 178, 229, 0) 196rpx);
}
.per-container{
  display: flex;
  flex-direction: column;
}
.item-last{
  height: 300rpx;
}

/* 以下是用户各个item的样式 */
.per-items{
  position: relative;
  display:flex;
  text-align: center;
  height: 80rpx;
  /* height: 7vh; */
  width: 654rpx;
  /* 间距采用 % 单位，为了全面屏兼容    */
  margin: 2rpx auto  0;
  /* background: #F2FCFF; */
  border-radius: 16rpx;
  background-color: #ffffff;
}
.big-margin{
  margin-top: 32rpx;
}
.red-message{
  position: absolute;
  height: 30rpx;
  top: -10rpx;
  right: -10rpx;
  background-color: red;
  border-radius: 20rpx;
}
.red-message-word{
  margin: auto 10rpx;
  color:#F2FCFF;
  
}
.icon{
  width: 48rpx;
  height: 48rpx;
  /* height: 4vh; */
  margin: auto 20rpx;
}
.item-title{
  height: 70rpx;
  line-height: 70rpx;
  margin: auto 10rpx;
  /* height: 4vh;
  line-height: 4vh; */
  font-family: PingFang SC;
  font-size: 28rpx;
  font-weight: 500;
  /* font-size: 2.3vh; */
  color: #333333;
}
.right-item{
  display: flex;
  flex-direction: row;
 position: absolute; 
 right: 24rpx;
 top: 0;
 bottom: 0;
 align-items: center;
}
.red-circle{
  width:16rpx;
  height: 16rpx;
  margin-right: 20rpx;
  background-color: red;
  border-radius: 50%;
}
.right-arrow-icon{
  width: 20rpx;
  height: 20rpx;
  margin: auto 0;
}