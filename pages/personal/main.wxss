/* pages/personal/main.wxss */
/* 引入通用样式 */
@import "/static/common.wxss";

.background{
  background-image: linear-gradient(199.75deg, rgba(140, 26, 255, 0.18) 40.18%, rgba(140, 26, 255, 0) 90.9%), linear-gradient(195.29deg, #DCBCFB 2.51%, #A2E4FA 27.51%);
}




/* 以下是用户各个item的样式 */
.per-items{
  height: 74rpx;
  /* height: 7vh; */
  width: 92%;
  /* 间距采用 % 单位，为了全面屏兼容    */
  margin: 0 4%  2.5% 4%;
  background: #F2FCFF;
  border-radius: 10rpx;
}
.icon{
  float: left;
  width: 48rpx;
  height: 48rpx;
  /* height: 4vh; */
  margin:  16rpx 16rpx ;
}
.item-title{
  height: 40rpx;
  line-height: 40rpx;
  /* height: 4vh;
  line-height: 4vh; */
  padding: 18rpx 0 16rpx 0;
  font-family: PingFang SC;
  font-size: 27rpx;
  /* font-size: 2.3vh; */
  color: #1D99C3;
}