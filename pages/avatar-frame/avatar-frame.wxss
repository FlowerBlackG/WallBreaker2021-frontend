.mainlayout {
    background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%);
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.linearcontainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 50rpx;
    width: 560rpx;
}

.avatar-frame-canvas {
    background: #4444;
    width: 560rpx;
    height: 560rpx;
}

.btn-select-avatar {
    color: #fff;
    background: #4444;
    border-radius: 36rpx;
}

.btn-select-avatar:active {
    background: #1116;
}

.candidate-img {
    margin-right: 20rpx;
    width: 180rpx;
    height: 180rpx;
    display: inline-block;
}
