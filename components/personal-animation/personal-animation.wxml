  <text class="pa-signature">{{personalInfo.signature}}</text>
  <text class="pa-identity">{{personalInfo.identity}}</text>

  <view class="pa-tagArea">
    <block wx:for="{{tags}}">
      <view class="pa-tag">
        <text class="pa-tagText">{{item}}</text>
      </view>
    </block>
  </view> -->
</view>