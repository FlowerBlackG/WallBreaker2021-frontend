/* components/dialog-box/dialog-box.wxss */
.dialog-box-shade{
  position:fixed;
  display: flex;
  background-color: rgba(0,0,0,0.2);
  width:100%;
  height:100%;
  left:0;
  top:0;
  z-index: 100;
}

.dialog-box-white-bg{

  /* position: absolute; */
  margin: auto auto;
  width: 650rpx;
  height: auto;
  /* left: 100rpx; */
  /* top: 500rpx; */
  border-radius: 50rpx;
  z-index: 101;
  background-color: #FAFEFF;
}

.dialog-box-content{
  display: flex;
  /* width: 400rpx; */
  margin: 30rpx 75rpx 10rpx;

  font-family: Noto Sans SC;
  font-style: normal;
  font-weight: bold;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  color:#4A5559;
  justify-content:center;
  
}
.dialog-input{
  height: 200rpx;
  width: 476rpx;
  /* width: auto; */
  margin: 0 75rpx;
  padding: 10rpx;
  border: 2rpx solid gray;
  border-radius: 10rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
}
.dialog-box-tip{
  display: flex;
  /* width: 400rpx; */
  margin: 10rpx 75rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 36rpx;
  justify-content:center;
  text-align: center;
  color: #4A5559;
}
.dialog-btn-box{
  display: flex;
  /* width: 400rpx; */
  height: 80rpx;
  margin: 0 auto;
  justify-content: space-around;
}


.dialog-box-cancel,.dialog-box-ok{
  height: 50rpx;
  width: 180rpx;
  border: 2rpx solid   #17B2E5;
  border-radius: 40rpx;

  line-height:50rpx;
  font-size: 26rpx;
  text-align: center;
  font-weight: normal;
  letter-spacing: 0.2vw;
}
.dialog-box-ok{ 
  color:#FAFEFF;
  background-color: #17B2E5;
}
.dialog-box-cancel{
  color:#17B2E5;
}

/********** 信息区域的格式等到设计稿出来再详细改 ***********/
.dialog-box-infoArea{
  height:80rpx;
  width: 250rpx;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  /* width: auto; */
}
.infoItem{
  width:100%;
  height:80rpx;
  justify-content: center;
  margin-left: 30rpx;
}
.infoKey{
  /* width: 400rpx; */
  width:60rpx;
  font-family: Noto Sans SC;
  font-style: normal;
  font-size: 26rpx;
  color:#4A5559;
}
.infoValue{
  left:50rpx;
  font-family: Noto Sans SC;
  font-style: normal;
  font-size: 26rpx;
  line-height: 40rpx;
  color:#4A5559;
}
.copyBtn{
  height:30rpx;
  width: 30rpx;
  background-color: chocolate;
}