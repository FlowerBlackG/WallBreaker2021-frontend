/* components/card/card.js.wxss */
.card{
  position: relative;
  width: 100%;
  height: 194rpx;
  margin-bottom: 24rpx;
  background: #F9F2FF;
  border-radius: 20rpx;
}
.tag{
  position: absolute;
  left: 18rpx;
  top: 16rpx;
  width: 116rpx;
  height: 44rpx;
  text-align: center;
  /* Purple3 */
  background: #1D99C3;
  border-radius: 18rpx;

  font-family: Noto Sans SC;
  font-style: normal;
  font-weight: 500;
  font-size: 26rpx;
  line-height: 44rpx;
  /* white */
  color: #FFFFFF;
}
.title{
  /* 帖子标题、位置 */
  position: absolute;
  left: 152rpx;
  top: 16rpx;
  height: 42rpx;
  /* 字体/bold/14 */
  font-family: PingFang SC;
  letter-spacing: 1rpx;
  font-style: normal;
  font-weight: bold;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #524A59;
}

.rightTag{
  /* JiRen/Home/Card/右侧标签 */
  /* 不设定高度，设置行高=36rpx；无内容时标签不显示 */
  position: absolute;
  right: -2rpx; 
  top: 21rpx;
  width: 105rpx;
  background: rgba(23, 178, 230, 0.8);
  border-radius: 20px 0px 0px 20px;
  /* 文字格式 */
  font-family: PingFang SC;
  font-size: 24rpx;
  line-height: 34rpx;
  text-align: center;
  color: #FFFFFF;
}

.rightTagColor-mine{
  background-color: rgba(140, 26, 255, 0.6);
} 
.rightTagColor-processing{
  background-color: rgba(140, 26, 255, 0.6);
}
.rightTagColor-close{
  background-color: #99989A;
}
.rightTagColor-refuse{
  background-color: #99989A ;
  font-size: 20rpx;
}
.rightTagColor-applying{
  background-color: rgba(140, 26, 255, 0.6);
}
.rightTagColor-pass{
  background-color: #701DC3;
}

.dueTime{
  position: absolute;
  bottom: 96rpx;
  left: 16rpx;
  width: 420rpx;
  height: 30rpx;

  letter-spacing: 1rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-size: 26rpx;
  line-height: 30rpx;
  color:#1D99C3;
}
.peopleIcon{
  position: absolute;
  left:434rpx;
  height: 32rpx;
  width: 35rpx;
}
/* 不同情况下的图标位置 */
.iconposition-middle{
  bottom: 94rpx;
}
.iconposition-bottom{
  bottom: 12rpx;
}
.peopleCount{
  position: absolute;
  color:#007399;
  left: 490rpx;
  letter-spacing: 2rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-size: 26rpx;
  line-height: 40rpx;
}
/* 不同情况下的图标位置 */
.countposition-middle{
  bottom: 92rpx;
}
.countposition-bottom{
  bottom: 11rpx;
}
.initiator{
  position: absolute;
  height: 22rpx;
  left: 16rpx;
  bottom: 16rpx;

  font-family: PingFang SC;
  font-size: 22rpx;
  line-height: 26rpx;
  color: #768185;
}


.description{
  position: absolute;
  width: 540rpx;
  height: 60rpx;
  left: 18rpx;
  bottom: 20rpx;
/* content/medium/11 */
  font-family: PingFang SC;
  font-size: 24rpx;
  line-height: 26rpx;
/* gray2_P */
  color: #99989A;
}

.image{/* Rectangle 15 */

    position: absolute;
    width: 108rpx;
    height: 108rpx;
    bottom: 20rpx;
    right: 18rpx;
    /* Gray1 */
    background: #E6E6E6;
    border-radius: 16rpx;
}