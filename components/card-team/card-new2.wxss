.description-contain{
  display: flex;
  position: absolute;
  /* width: 540rpx; */
  /* width: 650rpx; */
  height: 30rpx;
  left: 24rpx;
  bottom: 60rpx;
  align-items:flex-start;

  font-family: PingFang SC;
  font-size: 20rpx;
  line-height: 30rpx;
/* gray2_P */
  color: #99989A;
}
.description-contain-double{
  display: flex;
  position: absolute;
  /* width: 540rpx; */
  /* width: 650rpx; */
  height: 60rpx;
  left: 18rpx;
  bottom: 20rpx;
  align-items:center;

  font-family: PingFang SC;
  font-size: 24rpx;
  line-height: 30rpx;
/* gray2_P */
  color: #99989A;
}
.description-short{
  width: 540rpx;
}
.description-long{
  width: 650rpx;
}
.description-double{
  height: 60rpx;
  /* 超出部分隐藏 */
  overflow: hidden;     
  /* 末尾加省略号 */
  text-overflow:ellipsis;  
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  /* 行数，也可以设为1，用来做单行 */
  -webkit-line-clamp:2;
}
.description-normal{
  height: 30rpx;
  /* 只显示一行，并在末尾加省略号 */
  overflow: hidden;  
  white-space: nowrap;    
  /* 末尾加省略号 */
  text-overflow:ellipsis; 
}

