/* components/card/card.js.wxss */
.card{
  position: relative;
  width: 100%;
  height: 224rpx;
  margin-bottom: 24rpx;
  /* background: #F9F2FF; */
  background: #fff;
  border-radius: 20rpx;
}

.red-point{
  /* position: absolute; */
  height: 20rpx;
  width:20rpx;
  background-color: red;
  border-radius: 20rpx;
  z-index:100
}

.tag{
  position: absolute;
  left: 24rpx;
  top: 26rpx;
  width: 96rpx;
  height: 40rpx;
  text-align: center;
  /* Purple3 */
  background: #3E92CC;
  border-radius: 8rpx;

  font-family: Noto Sans SC;
  font-style: normal;
  font-weight: 500;
  font-size: 20rpx;
  line-height: 44rpx;
  /* white */
  color: #FFFFFF;
}
.title{
  /* 帖子标题、位置 */
  position: absolute;
  left: 136rpx;
  top: 25rpx;
  height: 42rpx;
  width: 440rpx;

  /* 只显示一行，并在末尾加省略号 */
  overflow: hidden;  
  white-space: nowrap;    
  /* 末尾加省略号 */
  text-overflow:ellipsis;
  
  /* 字体/bold/14 */
  font-family: PingFang SC;
  letter-spacing: 1rpx;
  font-style: normal;
  font-weight: bold;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333333;
}

.rightTag{
  /* JiRen/Home/Card/右侧标签 */
  /* 不设定高度，设置行高=36rpx；无内容时标签不显示 */
  position: absolute;
  right: -2rpx; 
  top: 29rpx;
  width: 104rpx;
  /* height: 32rpx; */
  /* padding: 3rpx 8rpx 3rpx 16rpx; */
  /* background: rgba(23, 178, 230, 0.8); */
  border-radius: 24px 0px 0px 24px;
  /* 文字格式 */
  font-family: PingFang SC;
  font-size: 20rpx;
  font-weight: 500;
  /* line-height: 32rpx; */
  text-align: center;
  color: #FFFFFF;
}

