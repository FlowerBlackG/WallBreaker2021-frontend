/* components/personal-brief/personal-brief.wxss */
/* 以下是用户简介per-brief样式 */
.per-brief{
  position: relative;
  height: 250rpx;
  width: 90%;
  margin: 3% 5%;
}
.photo{
  position: absolute;
  bottom: 20rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
}
.container{
  position: absolute;
  left: 240rpx;
  top: 30rpx;
}
.briefs{
  
  font-family: PingFang SC;
  color: #fff;
}
.nickname{
  height: 48rpx;
  font-size: 32rpx;
  line-height: 48rpx;
}
.school{
  /* height: 24rpx; */
  font-size: 26rpx;
  line-height: 36rpx;
}
.labels-container{
  display: flex;
  flex-wrap: wrap;
  width: 420rpx;
  font-family: PingFang SC;
}
.label{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  width: 120rpx;
  margin: 5rpx 10rpx;
  border-radius: 20rpx;
  background: rgba(23, 178, 230, 0.8);
  font-family: PingFang SC;
  font-size: 22rpx;
  line-height: 26rpx;
  text-align: center;
  color: #fff;
}
.labelColor-personal{
  background: rgba(23, 178, 230, 0.8);
}
.labelColor-interest{
  background: #1D99C3;
}