/* components/personal-brief/personal-brief.wxss */
/* 以下是用户简介per-brief样式 */
.per-brief{
  display: flex;
  flex-direction: row;
  position: relative;
  justify-content: space-around;
  align-items: center;
  /* height: 250rpx; */
  /* width: 90%; */
  margin: 3% 0;
  margin-left: 40rpx;
  margin-right: calc(32rpx - 8rpx);
}
.photo{
  /* position: absolute; */
  bottom: 20rpx;
  height: 192rpx;
  width: 192rpx;
  border-radius: 100rpx;
}
.container{
  width: calc(144rpx * 3 + 8rpx * 3);
  /* margin-left: 24rpx; */
  /* position: absolute;
  left: 240rpx;
  top: 30rpx; */
}
.briefs{
  
  font-family: PingFang SC;
}
.nickname-and-identification{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.nickname{
  height: 48rpx;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 48rpx;
  margin-bottom: 8rpx;
  margin-right: 14rpx;
}
.identification{
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 8rpx;
  color: #ffffff;
}
.school{
  /* height: 24rpx; */
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
}
.description{
  margin-top: 8rpx;
  font-size: 20rpx;
  font-weight: 300;
}
.labels-container{
  display: flex;
  flex-wrap: wrap;
  font-family: PingFang SC;
  margin-left: -8rpx;
  margin-top: 16rpx;
  width: 480rpx;
}
.label{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 32rpx;
  width: 144rpx;
  margin: 5rpx 8rpx;
  border-radius: 8rpx;
  background: rgba(23, 178, 230, 0.8);
  font-family: PingFang SC;
  font-size: 20rpx;
  font-weight: 500;
  line-height: 26rpx;
  text-align: center;
  color: #fff;
}
.labelColor-personal{
  background: #3E92CC;
}
.labelColor-interest{
  background: #957D95;
}