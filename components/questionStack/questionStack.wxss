/* components/questionStack/questionStack.wxss */
.isNeedQuestion {
  margin-bottom: 20rpx;
}
.isNeedQuestion-text
 {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #4A5559;

  display: flex;
  align-items: center;
}
.question-content-text {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #4A5559;

  display: flex;
  align-items: center;
}
.question-content-text-placeholder {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 13px;
  line-height: 18px;

  color: #989A9A;
}
.question-wrap {
  /*display: flex;*/
  margin: 18rpx 0 18rpx 0;
  height: 50rpx; 
}
.question-content
{
  display: inline-block;
  width: 600rpx;
  padding: 3rpx 0 3rpx 10rpx;
  margin-right: 10rpx;
  background: #F2FCFF;
  border-radius: 6px;
}

.delete {
  display: inline-block;
  vertical-align: top;
}
.appendQuestion {
  display: flex;
  align-items: center;
  width: 200rpx;
  margin-top: 30rpx;
}
.appendQuestion-label {
  font-family: PingFang SC;
  font-size: 14px;
  line-height: 16px;
  color: #4A5559;
}