<!--components/dropdown-box/dropdown-box.wxml-->

<view class="dropdown-box">
  <view class="current-item" catchtap="openClose">
    <text class="current-item-text">{{current.name}}</text>
  </view>
  <view class="option-list" wx:if="{{isShow}}" catchtap="optionTap">
    <view class="option-item"
      wx:for="{{result}}"
      wx:key="{{item.id}}"
      data-id="{{item.id}}"
      data-name="{{item.name}}">
      <text class="option-item-text">{{item.name}}</text>
    </view>
    
  </view>
</view>
